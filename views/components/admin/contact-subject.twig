<div class="control-box">
  <fieldset>
    <table class="form-table">
    <tbody>
      <tr>
        <th scope="row">{{ __('Field type', 'contact-form-7') }}</th>
        <td>
          <fieldset>
            <legend class="screen-reader-text">{{ __('Field type', 'contact-form-7') }}</legend>
            <label><input type="checkbox" name="required" /> {{ __( 'Required field', 'contact-form-7' ) }}</label>
